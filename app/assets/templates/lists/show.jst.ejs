<div class="list-group-item clearfix">
  <div class="list-group-item-heading row">
		<div class="col-xs-9" id='list-name-wrapper'></div>
		<div class="dropdown col-xs-3">
			<button class="btn dropdown-toggle list-dropdown" type="button" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu pull-right" role="menu">
				<li role="presentation">
					<a href="#" class="new-card-trigger">Add a card</a>
				</li>
					<hr>
				<li class="text-center">
					<button class="btn btn-danger remove-list">Remove List</button>
				</li>
			</ul>
		</div>
	</div>

	<div class="cards-list" data-id="<%= list.id %>">
		<% list.get('cards').each(function(card){ %>
		   <a href="#" class="list-group-item show-card" data-id="<%= card.id %>">
		     <%= card.get("name") %>
		   </a>
		<% }); %>
	</div>
	<div class="list-group-item" id="new-card-wrapper">
	  <a href="#" class="new-card-trigger">New Card</a>
	</div>
</div>