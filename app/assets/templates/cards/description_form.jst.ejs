    <textarea class="form-control" id="description-form" name="card[description]"><%= card.get('description') %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
  <button type="button" id="close-card-description-form" class="close">&times;</button>
</form>