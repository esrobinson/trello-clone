<form action="<%= boards_url %>" method="POST">
  <input type="hidden" name="authenticity_token"
           value="<%= form_authenticity_token %>">
  <label for="board_name">Name</label>
  <input type="text" id="board_name" name="board[name]">
  <br>
  <input type="hidden" name="board[private]" value=false>
  <label for="board_private">Private?</label>
  <input type="checkbox" id="board_private" name="board[private]">
    <br>
  <input type="submit" value="Create Board">
</form>